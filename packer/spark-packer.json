{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "base_ebs_hvm_ami": "ami-b3523089",
    "base_ebs_pv_ami": "ami-ef5133d5"
  },

  "builders": [
    {
      "name": "spark:arkbase:ap-southeast-2:ebs:hvm",
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "ap-southeast-2",
      "source_ami": "{{user `base_ebs_hvm_ami`}}",
      "instance_type": "m3.medium",
      "spot_price": "0.012",
      "ssh_username": "root",
      "ami_name": "Spark Ark Base HVM {{timestamp}}",
      "ami_description": "Spark Base HVM AMI",
      "ami_virtualization_type": "hvm"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh -x '{{ .Path }}'",
      "scripts": [
        "./upgrade-centos.sh",
        "./enable-root-login.sh",
        "./tools-setup.sh",
        "./firewall-setup.sh",
        "./ganglia-setup.sh",
        "./python-setup.sh",
        "./java-setup.sh",
        "./setup-mounts.sh",
        "./hadoop-setup.sh",
        "./R-setup.sh",
        "./vw-setup.sh",
        "./extras-setup.sh"
      ],
      "pause_before": "10s"
    }
  ]
}
