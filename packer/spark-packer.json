{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "base_ebs_hvm_ami_minimal":  "ami-b3523089",
    "base_ebs_pv_ami_minimal":   "ami-ef5133d5",
    "base_ebs_hvm_ami_upgraded": "ami-b9146083",
    "base_ebs_pv_ami_upgraded":  ""
  },

  "builders": [
    {
      "name": "spark:arkbase:ap-southeast-2:ebs:hvm",
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "ap-southeast-2",
      "source_ami": "{{user `base_ebs_hvm_ami_upgraded`}}",
      "instance_type": "m3.xlarge",
      "spot_price": "0.05",
      "ssh_username": "root",
      "ami_name": "Spark Ark Base HVM {{timestamp}}",
      "ami_description": "Spark Base HVM AMI",
      "ami_virtualization_type": "hvm"
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "./image-variables.sh",
      "destination": "/root/image-variables.sh",
      "pause_before": "10s"
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; source /root/image-variables.sh; {{ .Vars }} sh -x '{{ .Path }}'",
      "scripts": [
        "./upgrade-centos.sh",
        "./java-setup.sh",
        "./tools-setup.sh",
        "./firewall-setup.sh",
        "./hadoop-setup.sh",
        "./ganglia-setup.sh",
        "./R-setup.sh",
        "./python-setup.sh",
        "./setup-mounts.sh",
        "./vw-setup.sh",
        "./extras-setup.sh",
        "./clean.sh"
      ]
    },
    {
      "type": "file",
      "source": "../../spark-ec2",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; source /root/image-variables.sh; {{ .Vars }} sh -x '{{ .Path }}'",
      "scripts": [
        "./init-modules.sh"
      ]
    }
  ]
}
